<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mihajlo.shoppapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Shopping app"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity_"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginActivity_"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.RegistrationActivity_"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.NewItem_"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MyAccount_"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.EditItem_"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>